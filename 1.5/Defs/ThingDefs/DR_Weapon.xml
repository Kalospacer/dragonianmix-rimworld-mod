		<weaponTags>
			<li>DR_BattleHammer</li>
		</weaponTags>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>17</power>
				<extraMeleeDamages>
					<li>
						<def>EMP</def>
						<amount>5</amount>
					</li>
				</extraMeleeDamages>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<labelUsedInLogging>false</labelUsedInLogging>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>29</power>
				<cooldownTime>3</cooldownTime>
				<extraMeleeDamages>
					<li>
						<def>EMP</def>
						<amount>15</amount>
					</li>
				</extraMeleeDamages>
			</li>
